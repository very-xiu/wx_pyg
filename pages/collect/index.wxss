page {
  background-color: #f3f4f6;
}
.collect_main_nav .collect_title {
  padding: 40rpx 0;
}
.collect_main_nav .collect_title .collect_tips {
  padding: 15rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
  margin-left: 25rpx;
  background-color: #fff;
}
.collect_main_nav .collect_title .active {
  color: var(--themColor);
  border-color: var(--themColor);
}
.collect_main {
  background-color: #fff;
}
.collect_main .collect_item {
  display: flex;
  border-bottom: 2rpx solid #ccc;
  border-top: 2rpx solid #ccc;
  padding: 10rpx;
}
.collect_main .collect_item:not(:first-child) {
  border-top: 0;
}
.collect_main .collect_item .collect_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.collect_main .collect_item .collect_img_wrap image {
  width: 70%;
}
.collect_main .collect_item .collect_info_wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.collect_main .collect_item .collect_info_wrap .collect_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.collect_main .collect_item .collect_info_wrap .collect_price {
  color: var(--themColor);
  font-size: 30rpx;
}
